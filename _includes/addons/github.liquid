<dl>
    <dt>{{ __github }}</dt>
    {%- if include.items -%}
        {% for item in include.items -%}
            {% case item %}
                {% when "homepage" %}
                    <dd><a href="{{ repository_url }}"><i class="fab fa-github"></i> {{ __homepage }}</a></dd>
                {% when "issues" %}
                    <dd><a href="{{ issues_url }}"><i class="far fa-question-circle"></i> {{ __issues }}</a></dd>
                {% when "download" %}
                    <dd><a href="{{ zip_url }}"><i class="fas fa-download"></i> {{ __download }}</a></dd>
                {% else %}
            {% endcase %}
        {% endfor -%}
    {%- else -%}
        <dd><a href="{{ repository_url }}"><i class="fab fa-github"></i> {{ __homepage }}</a></dd>
        <dd><a href="{{ issues_url }}"><i class="far fa-question-circle"></i> {{ __issues }}</a></dd>
        <dd><a href="{{ zip_url }}"><i class="fas fa-download"></i> {{ __download }}</a></dd>
    {%- endif -%}
</dl>
