{%- assign html_pages = site.html_pages
    | sort: "path"
    | where_exp: "item", "item.url != '/404.html'"
    | where_exp: "item", "item.url != '/search.html'" -%}
{%- assign html_dirs  = html_pages
    | where_exp: "item", "item.dir == item.url" -%}
{%- assign html_files = html_pages
    | where_exp: "item", "item.dir != item.url" -%}
