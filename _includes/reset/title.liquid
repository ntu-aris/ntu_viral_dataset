{%- case page.url -%}
    {%- when "/" -%}
        {%- assign title = site.title | append: " 路 " | append: site.description -%}
    {%- when "/search.html" -%}
        {%- assign title = __search   | append: " 路 " | append: site.title -%}
    {%- when "/404.html" -%}
        {%- assign title = __404      | append: " 路 " | append: site.title -%}
    {%- else -%}
        {%- assign title = page.title | append: " 路 " | append: site.title -%}
{%- endcase -%}
