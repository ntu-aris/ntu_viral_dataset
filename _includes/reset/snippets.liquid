{%- capture site_style -%}
    @import "style.scss";
    @import "rougify/{{ site.rougify | default: 'github' }}.scss";
    {%- if site.fluid -%}
        @import "fluid.scss";
    {%- endif -%}
    @import "custom.scss"; {{ site.scss }}
{%- endcapture -%}

{%- capture site_script %}
    {% include assets/js/core.js %}
    {% include assets/js/custom.js %} {{ site.script }}
{%- endcapture -%}
